<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:background="@color/dialog">
		<LinearLayout
			android:id="@+id/linear2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<TextView
				android:id="@+id/textview1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:layout_marginTop="20dp"
				android:layout_marginRight="10dp"
				android:layout_marginBottom="50dp"
				android:padding="8dp"
				android:text="School Stats"
				android:textSize="25sp"
				android:textStyle="bold"
				android:textColor="@color/text"
				android:layout_weight="1" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear3"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:orientation="vertical"
			android:layout_weight="1">
			<LinearLayout
				android:id="@+id/op2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				android:clickable="true">
				<ImageView
					android:id="@+id/imageview4"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:src="@drawable/ic51"
					android:scaleType="fitCenter" />
				<TextView
					android:id="@+id/textview6"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Moodle"
					android:textSize="18sp"
					android:textStyle="bold"
					android:textColor="@color/text" />
				<ImageView
					android:id="@+id/imageview12"
					android:layout_width="20dp"
					android:layout_height="20dp"
					android:src="@drawable/ic49"
					android:scaleType="fitCenter" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/op3"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				android:clickable="true">
				<ImageView
					android:id="@+id/imageview13"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:src="@drawable/ic50"
					android:scaleType="fitCenter" />
				<TextView
					android:id="@+id/textview11"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Wolfram Alpha"
					android:textSize="18sp"
					android:textStyle="bold"
					android:textColor="@color/text" />
				<ImageView
					android:id="@+id/imageview14"
					android:layout_width="20dp"
					android:layout_height="20dp"
					android:src="@drawable/ic49"
					android:scaleType="fitCenter" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/op4"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				android:clickable="true">
				<ImageView
					android:id="@+id/imageview15"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:src="@drawable/ic53"
					android:scaleType="fitCenter" />
				<TextView
					android:id="@+id/textview12"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Simpleclub"
					android:textSize="18sp"
					android:textStyle="bold"
					android:textColor="@color/text" />
				<ImageView
					android:id="@+id/imageview16"
					android:layout_width="20dp"
					android:layout_height="20dp"
					android:src="@drawable/ic49"
					android:scaleType="fitCenter" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/op5"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				android:clickable="true">
				<ImageView
					android:id="@+id/imageview17"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:src="@drawable/ic52"
					android:scaleType="fitCenter" />
				<TextView
					android:id="@+id/textview13"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Studyflix"
					android:textSize="18sp"
					android:textStyle="bold"
					android:textColor="@color/text" />
				<ImageView
					android:id="@+id/imageview18"
					android:layout_width="20dp"
					android:layout_height="20dp"
					android:src="@drawable/ic49"
					android:scaleType="fitCenter" />
			</LinearLayout>
			<com.google.android.material.divider.MaterialDivider
				android:id="@+id/linear4"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:orientation="horizontal" />
			<LinearLayout
				android:id="@+id/op_subject"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:padding="8dp"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				android:clickable="true">
				<ImageView
					android:id="@+id/imageview3"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:src="@drawable/ic_book"
					android:scaleType="fitCenter" />
				<TextView
					android:id="@+id/textview3"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="SchulfÃ¤cher"
					android:textSize="18sp"
					android:textStyle="bold"
					android:textColor="@color/text" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/op_settings"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				android:clickable="true">
				<ImageView
					android:id="@+id/imageview2"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:src="@drawable/ic_settings"
					android:scaleType="fitCenter" />
				<TextView
					android:id="@+id/textview4"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Einstellungen"
					android:textSize="18sp"
					android:textStyle="bold"
					android:textColor="@color/text" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/op_help"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="@android:color/transparent"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				android:clickable="true">
				<ImageView
					android:id="@+id/imageview8"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:src="@drawable/ic_explore"
					android:scaleType="fitCenter" />
				<TextView
					android:id="@+id/textview10"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Hilfe / Anleitung"
					android:textSize="18sp"
					android:textStyle="bold"
					android:textColor="@color/text" />
			</LinearLayout>
			<TextView
				android:id="@+id/textview14"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:padding="8dp"
				android:gravity="bottom"
				android:text="If you need support feel free to contact me directly under the official SchoolStats subreddit or via Telegram under t.me/Pr0t0n0s"
				android:textSize="14sp"
				android:textColor="@color/text"
				android:layout_weight="1" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
